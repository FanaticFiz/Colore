<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout_of_Game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgstyle1"
    android:orientation="vertical"
    android:weightSum="100" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
         >
        
        <TextView
            android:id="@+id/game_up_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:textSize="22sp"
            android:paddingLeft="2dp"
            android:text="00:11"
            android:textColor="#FF007700"
            />

         <TextView
             android:id="@+id/game_up_text2"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:textSize="22sp"
             android:gravity="right"
             android:paddingRight="2dp"
             android:text="00:22"
             android:textColor="#FF007700" />

    </FrameLayout>

    <GridView
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp" 
        android:scrollbars="none"
        android:padding="5dp"
        android:listSelector="#00000000"        >
    </GridView>

    <TextView
        android:id="@+id/game_down_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#FFAA4455"
        android:gravity="left"
        android:text="@string/app_name"
        android:textColor="#FF111111" />

</LinearLayout>