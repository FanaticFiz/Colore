<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    
    <style name="DialogAnimationMessadges">
        <item name="android:windowEnterAnimation">	@anim/fadein			</item>
        <item name="android:windowExitAnimation">	@android:anim/fade_out	</item>
    </style>
    
    <style name="DialogAnimationWin">
        <item name="android:windowEnterAnimation">	@anim/fadein2			</item>
        <item name="android:windowExitAnimation">	@android:anim/fade_out	</item>
    </style>
    
    <style name="DialogAnimationLoose">
        <item name="android:windowEnterAnimation">	@anim/fadein3			</item>
        <item name="android:windowExitAnimation">	@android:anim/fade_out	</item>
    </style>
    
</resources>